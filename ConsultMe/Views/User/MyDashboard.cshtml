
@{
    ViewData["Title"] = "My Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@model List<ConsultMe.Domain.ViewModels.AppointmentViewModel>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Profile Sidebar -->
            <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
                <div class="profile-sidebar">
                    <div class="widget-profile pro-widget-content">
                        <div class="profile-info-widget">
                            <a href="#" class="booking-doc-img">
                                <img src="../assets/img/patients/patient.jpg" alt="User Image">
                            </a>
                            <div class="profile-det-info">
                                @{
                                    ConsultMe.Domain.ViewModels.UserViewModel userModel = (ConsultMe.Domain.ViewModels.UserViewModel)@ViewData["UserData"];
                                    <h3>@userModel.Displayname</h3>
                                    <div class="patient-details">
                                        <h5>@userModel.Email</h5>
                                        <h5 class="mb-0">@userModel.Mobilenumber</h5>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- / Profile Sidebar -->
            <div class="col-md-7 col-lg-8 col-xl-9">
                <div class="card">
                    <div class="card-body pt-0">
                        <!-- Tab Content -->
                        <div class="tab-content pt-0">
                            <!-- Appointment Tab -->
                            <div id="pat_appointments" class="tab-pane fade show active">
                                <div class="card card-table mb-0">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-center mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Doctor</th>
                                                        <th>Appt Date</th>
                                                        <th>Booking Date</th>
                                                        <th>Booking Number</th>
                                                        <th>Clinic Name</th>
                                                        <th>Status</th>
                                                        <th>Current Booking #</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var record in (List<ConsultMe.Domain.ViewModels.AppointmentViewModel>)Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <h2 class="table-avatar">
                                                                    <a href="#" class="avatar avatar-sm mr-2">
                                                                        <img class="avatar-img rounded-circle" src="../assets/img/doctors/doctor-thumb-01.jpg" alt="User Image">
                                                                    </a>
                                                                    <a href="doctor-profile.html">Dr. @record.DoctorName <span>Dental</span></a>
                                                                </h2>
                                                            </td>
                                                            <td>@record.Appointmentdate <span class="d-block text-info">@record.SlotTime</span></td>
                                                            <td>@record.Createddate.ToString("dd-MM-yyyy")</td>
                                                            <td>@record.BookingNumber</td>
                                                            <td>@record.ClinicName</td>
                                                            <td>
                                                                @if (@record.Status == "Confirmed")
                                                                {
                                                                    <span class="badge badge-pill bg-warning-light">@record.Status</span>
                                                                }
                                                                else if (@record.Status == "Cancelled")
                                                                {
                                                                    <span class="badge badge-pill bg-danger-light">@record.Status</span>
                                                                }
                                                                else if (@record.Status == "Completed" || @record.Status == "UnderReview")
                                                                {
                                                                    <span class="badge badge-pill bg-success-light">@record.Status</span>
                                                                }
                                                            </td>
                                                            <td>@record.CurrentReviewNumber</td>
                                                            @*<td class="text-right">
                                                <div class="table-action">
                                                    <a href="javascript:void(0);" class="btn btn-sm bg-primary-light">
                                                        <i class="fas fa-print"></i> Print
                                                    </a>
                                                    <a href="javascript:void(0);" class="btn btn-sm bg-info-light">
                                                        <i class="far fa-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>*@
                                                        </tr>
                                                    }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Appointment Tab -->
                        </div>
                        <!-- /Tab Content -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
